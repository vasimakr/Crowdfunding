<br />
<br />
<a class="btn btn-primary" asp-controller="Backer" asp-action="Index">View projects you have funded</a>
<br />
<br />
<form method="post" action="/Project/Search">
    <label for="search">Search:</label>
    <input type="text" name="search" />
    <input type="submit" value="Search" />
</form>
<br />
<br />
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>image</th>
                <!--<th>video</th>-->
                <th>Funding</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td> <a href="/backer/projectedit/@project.Id" title="View"><b> @project.Title</b></a></td>
                    <td> @project.Description </td>
                    <td>



                        @if (project.Description != null)
                        {
                            <img src="/images/@project.Description" title="Project image" width="100px" height="100px" />
                        }



                    </td>
                    <td> @project.Fundings </td>
                    <td> @project.Category </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="container">

    </div>

    <div class="container">

    </div>

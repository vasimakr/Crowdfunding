@{
    ViewData["Title"] = "Creator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Crowdfunding.Model.Project>

<a class="btn btn-primary" asp-area="" asp-controller="Project" asp-action="Create">Create a new project</a>

<br />
<br />

<h3>My Projects</h3>



<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>image</th>
            @*<th>video</th>*@
            <th>Funding</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var project in Model)
        {
            <tr>
                <td> <a href="/creator/projectedit/@project.Id" title="View"><b> @project.Title</b></a></td>
                <td> @project.Description </td>
                <td>



                    @if (project.Description != null)
                    {
                        <img src="/images/@project.Description" title="Project image" width="100" height="100" />
                    }



                </td>
                <td> @project.Fundings </td>
                <td> @project.Category </td>
               
                
                    @*/ <td> <a href="/project/delete/@project.Id" title="delete"><b>X</b></a> </td>
                    <td> <a href="/project/update/@project.Id" title="update"><b>V</b></a> </td>/*@
            </tr>
        }
    </tbody>
</table>


<hr />

<div class="container">

</div>
